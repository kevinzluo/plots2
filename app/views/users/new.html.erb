<div class="col-md-3">

<%= raw t('users.new.about_public_lab') %>

</div>

<div class="col-md-9">

  <hr class="hidden-md hidden-lg" />

  <h2><%= t('users.new.sign_up') %></h2>

  <% if params[:lang] %>
  <p>
    <div id="google_translate_element"></div><script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE, autoDisplay: false, multilanguagePage: true}, 'google_translate_element');
      }
    </script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
  </p>
  <% end %>

  <br />
  <% params[:redirect_link] = !params[:return_to].nil? %>
  <% params[:return_to] = params[:return_to] || "/wiki/events" %>
  <% box = I18n.t('users_controller.registration_successful') %>
  <% box += " " + I18n.t('users_controller.continue_where_you_left_off', :url1 => params[:return_to].to_s) if params[:return_to] %>
  <%= box.html_safe %>
  <p><%= t('users_controller.continue_where_you_left_off', :url1 => params[:return_to].to_s).html_safe %></p>
   <%= render 'create_form' %> 
   
  <% cache('feature_signup-notice', skip_digest: true) do %>
   <%= feature('signup-notice') %>
  <% end %>

  <br style="margin-bottom:20px;" />

</div>
